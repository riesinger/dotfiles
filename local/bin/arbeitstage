#!/usr/bin/env python3

import re
from requests import request
from bs4 import BeautifulSoup
import sys

if len(sys.argv) < 2:
    print("usage: arbeitstage <jahr>")
    sys.exit(1)
else:
    response_body = request(method="GET", url=f"https://www.arbeitstage.org/baden-wuerttemberg/arbeitstage-{sys.argv[1]}-baden-wuerttemberg/").text
    soup = BeautifulSoup(response_body, 'html.parser')
    line = soup.find(string=re.compile("Baden-WÃ¼rttemberg hat"))
    print(line)
